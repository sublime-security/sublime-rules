name: "Invoice or receipt from freemail sender with fraudulent customer service number"
description: |
  An invoice or receipt from a freemail sender which instructs the receipient to call a fraudulent customer service number
type: "rule"
source: |
  type.inbound
  and sender.email.domain.root_domain in $free_email_providers
  and any(attachments,
      any(beta.binexplode(.),
          (any(.scan.ocr.text, ilike(., "*order*")) or any(.scan.ocr.text, ilike(., "*invoice*")) or any(.scan.ocr.text, ilike(., "*receipt*"))) and 
          (any(.scan.ocr.text, ilike(., "*call*")) or any(.scan.ocr.text, ilike(., "*contact*")) or any(.scan.ocr.text, ilike(., "*connect*"))) and 
          (any(.scan.ocr.text, ilike(., "*help*")) or any(.scan.ocr.text, ilike(., "*support*")) or any(.scan.ocr.text, ilike(., "*cancel*")))
      )
  )
tags:
  - "Invoice fraud"
  - "Receipt fraud"
  - "Customer service fraud"
